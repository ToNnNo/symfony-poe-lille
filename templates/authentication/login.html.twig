{% extends 'base.html.twig' %}

{% block title %}Hello AuthenticationController!{% endblock %}

{% block body %}

    <h2>Authentication</h2>

    {% if error %}
        <div class="alert alert-danger">{{ error.message | trans }}</div>
    {% endif %}

    <form method="post">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" name="_username" id="username" class="form-control"
                   placeholder="Username" value="{{ username }}" autofocus />
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" name="_password" id="password" class="form-control" placeholder="Password" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-outline-primary" value="Log In" />
        </div>
    </form>

{% endblock %}
